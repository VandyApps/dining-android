<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/list_bg">
    <ListView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:id="@android:id/list"
        android:listSelector="@android:color/transparent"
        android:layout_above="@+id/footer"
        android:cacheColorHint="@color/grey" />

    <include android:id="@+id/footer" android:layout_height="60dp"
        layout="@layout/mymenu" android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" >
    </include>
</RelativeLayout>